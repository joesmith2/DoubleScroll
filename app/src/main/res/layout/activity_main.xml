<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/imageScrollView">
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="1120dp"
            android:orientation="vertical">
            <ImageView
                android:adjustViewBounds="true"
                android:id="@+id/imageA"
                android:layout_width="wrap_content"
                android:layout_height="280dp"
                android:src="@drawable/a"
                android:scaleType="centerCrop"/>
            <ImageView
                android:adjustViewBounds="true"
                android:id="@+id/imageB"
                android:layout_width="wrap_content"
                android:layout_height="280dp"
                android:src="@drawable/b"
                android:scaleType="centerCrop"/>
            <ImageView
                android:adjustViewBounds="true"
                android:id="@+id/imageC"
                android:layout_width="wrap_content"
                android:layout_height="280dp"
                android:src="@drawable/e"
                android:scaleType="centerCrop"/>
            <ImageView
                android:adjustViewBounds="true"
                android:id="@+id/imageD"
                android:layout_width="wrap_content"
                android:layout_height="280dp"
                android:src="@drawable/g"
                android:scaleType="centerCrop"/>
        </LinearLayout>
        </ScrollView>

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textScrollView">
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="1280dp"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="320dp"
                android:text="Flowers"
                android:textSize="@dimen/abc_action_bar_stacked_max_height"
                android:textColor="#fffffffb"
                android:gravity="center_vertical"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="320dp"
                android:text="Utah"
                android:textSize="@dimen/abc_action_bar_stacked_max_height"
                android:textColor="#fffffffb"
                android:gravity="center_vertical"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="320dp"
                android:text="Koala"
                android:textSize="@dimen/abc_action_bar_stacked_max_height"
                android:textColor="#fffffffb"
                android:gravity="center_vertical"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="320dp"
                android:text="Penguin"
                android:textSize="@dimen/abc_action_bar_stacked_max_height"
                android:textColor="#fffffffb"
                android:gravity="center_vertical"/>
            </LinearLayout>
        </ScrollView>

</RelativeLayout>
